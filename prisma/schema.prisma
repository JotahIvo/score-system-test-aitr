generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String @default("student") // 'student' or 'professor'
}

model Grade {
  id          Int    @id @default(autoincrement())
  studentName String
  subject     String
  grade       Float
  professorId Int
}
